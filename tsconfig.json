{
  "compilerOptions": {
    /* Basic Options */
    // "incremental": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "outDir": "./build",
    "strict": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
